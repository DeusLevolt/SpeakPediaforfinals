<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/translator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/back_button_tts"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/heading9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="60dp"
        android:text="Text to"
        style="@style/FontsForAllHeading"/>

    <TextView
        android:id="@+id/heading10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech"
        style="@style/FontsForAllHeading"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="260dp"
        android:src="@drawable/icon_text_speech"/>

    <RelativeLayout
        android:id="@+id/ttsblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SharedImageViewStyle"
        android:layout_marginTop="75dp">

        <EditText
            android:id="@+id/display_text"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:background="@drawable/white_bg"/>

        <ImageView
            android:id="@+id/imageButtonspeech"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/new_mic"/>

        <ImageView
            android:id="@+id/imageButtonspeak"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="190dp"
            android:src="@drawable/volume"/>


        <TextView
            android:id="@+id/ttsTextView"
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginStart="15dp"
            android:maxLines="4"
            android:background="@drawable/white_bg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
