<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_act_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/shared_background_1"
        style="@style/SharedImageViewStyle"
        android:layout_width="match_parent">
    </ImageView>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/icon_speakpedia_finals"/>

    <ImageView
        android:id="@+id/shared_background_2"
        style="@style/SharedImageViewStyle_1"
        android:layout_width="match_parent"
        android:layout_marginTop="680dp"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/white_bg" />


        <ImageView
            android:id="@+id/button1"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="100dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/icon_language" />

        <TextView
            android:id="@+id/heading2"
            style="@style/FontsForAllHeading"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="130dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Translator" />

        <ImageView
            android:id="@+id/button2"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="250dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/white_bg" />

        <TextView
            android:id="@+id/heading3"
            style="@style/FontsForAllHeading"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="280dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Game" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/console" />

        <ImageView
            android:id="@+id/button3"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="400dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="410dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="430dp"
            android:src="@drawable/icon_settings" />

        <TextView
            android:id="@+id/heading4"
            style="@style/FontsForAllHeading"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="430dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Settings" />

    <ImageView
        android:id="@+id/headingAbout"
        android:layout_width="300dp"
        android:layout_height="120dp"
        style="@style/SharedImageViewStyle"
        android:layout_marginStart="29dp"
        android:layout_marginTop="550dp"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="560dp"
        android:src="@drawable/white_bg"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="580dp"
        android:src="@drawable/information"/>

    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="580dp"
        android:clickable="true"
        android:focusable="true"
        android:text="About Us"
        style="@style/FontsForAllHeading"/>

    </RelativeLayout>