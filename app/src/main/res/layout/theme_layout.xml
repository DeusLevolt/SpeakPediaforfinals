<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/shared_background_9"
        style="@style/SharedImageViewStyle"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/back_button_theme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/heading11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        android:text="Theme"
        style="@style/FontsForAllHeading"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/menu"/>

    <ImageView
        android:id="@+id/shared_background_10"
        style="@style/SharedImageViewStyle_1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_bg"
        android:padding="0dp">

        <ImageView
            android:id="@+id/bgbluebutton"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:id="@+id/bg_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/down_arrow" />

        <TextView
            android:id="@+id/background"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="105dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/baloo"
            android:text="Background"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/fontsbluebutton"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="270dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:id="@+id/fonts_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="295dp"
            android:src="@drawable/down_arrow" />

        <TextView
            android:id="@+id/fonts"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="290dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/baloo"
            android:text="Fonts"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </RelativeLayout>

</RelativeLayout>