<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/shared_background_7"
        style="@style/SharedImageViewStyle"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/back_button_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/heading8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        android:text="Settings"
        style="@style/FontsForAllHeading"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="250dp"
        android:src="@drawable/icon_settings"/>

    <ImageView
        android:id="@+id/shared_background_8"
        style="@style/SharedImageViewStyle_1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_bg"
        android:padding="0dp">

        <ImageView
            android:id="@+id/themebluebutton"
            style="@style/SharedImageViewStyle"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="102dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/theme"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Theme"
            style="@style/FontsForAllHeading"/>


        <ImageView
            android:id="@+id/aboutusbluebutton"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            style="@style/SharedImageViewStyle" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:src="@drawable/white_bg" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/information" />

        <TextView
            android:id="@+id/about"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="320dp"
            android:clickable="true"
            android:focusable="true"
            android:text="About Us"
            style="@style/FontsForAllHeading"/>

    </RelativeLayout>
</RelativeLayout>
