<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/shared_background_3"
        style="@style/SharedImageViewStyle"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/back_button_aboutus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        android:text="About Us"
        style="@style/FontsForAllHeading"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/menu"/>

    <ImageView
        android:id="@+id/shared_background_4"
        style="@style/SharedImageViewStyle_1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@color/white"
        android:scrollbarThumbVertical="@color/black"
        android:padding="0dp"
        android:background="@drawable/white_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10dp"
                android:text="@string/about_speak"
                android:textAlignment="center"
                android:textAppearance="@style/about_speak" />
        </LinearLayout>







    </ScrollView>

</RelativeLayout>